{
    "env": {
        "browser": true,
        "es2020": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": 11,
        "sourceType": "module"
    },
    "rules": {
        "semi": "error",
        "quotes": ["warn", "single"],
        "no-trailing-spaces": "error",
        "no-multi-str": "warn",
        "no-redeclare": "error",
        "object-curly-spacing": "warn",
        "array-bracket-spacing": "warn",
        "no-var": "error",
        "prefer-const": "error",
        "prefer-arrow-callback": "error",
        "no-const-assign": "error"
    }
}
